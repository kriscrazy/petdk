{% unless customer.tags contains 'b2b' or section.settings.content == blank %}
<div class="top-bar text-center">
  <div class="wrapper">
    {{ section.settings.content }}
  </div>
</div>
{% endunless %}

{% schema %}
  {
    "name": "Top bar",
    "settings": [
      {
        "type": "text",
        "id": "content",
        "label": "Content"
      }
    ]
  }
{% endschema %}
